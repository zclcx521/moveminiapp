/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 顶部导航栏样式 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 15px;
  background-color: #000;
  color: white;
  height: 40px;
}

.search-icon {
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #333;
  border-radius: 50%;
}

.search-icon image {
  width: 20px;
  height: 20px;
}

.top-right {
  display: flex;
  align-items: center;
}

.dots {
  margin-right: 10px;
  font-size: 18px;
  letter-spacing: 2px;
}

.circle {
  width: 30px;
  height: 30px;
  background-color: #333;
  border-radius: 50%;
}

/* 分类标签栏样式 */
.category-bar {
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  background-color: #000;
  padding: 0 10px 10px;
}

.category-item {
  padding: 5px 15px;
  margin-right: 10px;
  color: #999;
  font-size: 14px;
}

.category-item.active {
  color: white;
  font-weight: bold;
  position: relative;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background-color: white;
}

/* 滚动区域样式 */
.scrollarea {
  flex: 1;
  overflow-y: auto;
  background-color: #f5f5f5;
}

/* 主要视频内容样式 */
.video-container {
  position: relative;
  width: 100%;
  height: 200px;
  background-color: #000;
  margin-bottom: 15px;
}

.video-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-title {
  position: absolute;
  bottom: 60px;
  left: 15px;
  color: white;
  font-size: 18px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
}

.video-subtitle {
  position: absolute;
  bottom: 40px;
  left: 15px;
  color: white;
  font-size: 14px;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
}

.video-tags {
  position: absolute;
  bottom: 15px;
  left: 15px;
  display: flex;
}

.tag {
  font-size: 12px;
  color: white;
  margin-right: 10px;
}

.video-ad-tags {
  position: absolute;
  bottom: 15px;
  right: 15px;
  display: flex;
}

.ad-tag {
  font-size: 12px;
  color: white;
  margin-left: 10px;
}

.video-indicators {
  position: absolute;
  bottom: 5px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
}

.indicator {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: rgba(255,255,255,0.5);
  margin: 0 3px;
}

.indicator.active {
  background-color: #ff4d4f;
}

/* AI助手区域样式 */
.ai-assistant {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 10px 15px;
  margin: 10px;
  border-radius: 8px;
}

.ai-icon {
  margin-right: 10px;
  font-size: 20px;
}

.ai-text {
  flex: 1;
  font-size: 14px;
}

.ai-arrow {
  color: #999;
}

/* 视频推荐区域样式 */
.video-recommendation {
  display: flex;
  padding: 10px;
  margin-bottom: 60px; /* 为底部导航栏留出空间 */
}

.video-card {
  width: 40%;
  margin-right: 10px;
}

.video-card-image {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  object-fit: cover;
}

.video-card-title {
  font-size: 14px;
  margin-top: 5px;
  font-weight: bold;
}

.video-card-stats {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.trending-list {
  flex: 1;
  background-color: white;
  border-radius: 8px;
  padding: 10px;
}

.trending-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.trending-icon {
  margin-right: 5px;
  font-size: 16px;
}

.trending-title {
  flex: 1;
  font-size: 14px;
  font-weight: bold;
}

.trending-arrow {
  color: #999;
}

.trending-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.trending-rank {
  width: 20px;
  height: 20px;
  background-color: #f0f0f0;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  margin-right: 10px;
}

.trending-item:nth-child(2) .trending-rank {
  background-color: #ff4d4f;
  color: white;
}

.trending-item:nth-child(3) .trending-rank {
  background-color: #ff7a45;
  color: white;
}

.trending-item:nth-child(4) .trending-rank {
  background-color: #ffa940;
  color: white;
}

.trending-content {
  flex: 1;
}

.trending-name {
  font-size: 12px;
}

.trending-views {
  font-size: 12px;
  color: #ff4d4f;
}

/* 底部导航栏样式 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50px;
  background-color: white;
  border-top: 1px solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.tab-icon {
  font-size: 20px;
  margin-bottom: 2px;
}

.tab-text {
  font-size: 12px;
  color: #999;
}

.tab-item.active .tab-text {
  color: #1677ff;
}
