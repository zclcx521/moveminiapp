/**wode.wxss**/
page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.container {
  padding-bottom: 20px;
}

/* 顶部导航栏 */
.top-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12px 16px;
  background: linear-gradient(180deg, #4a90e2, #357abd);
  color: white;
  height: 48px;
}

.title {
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 24px 16px;
  background: linear-gradient(180deg, #357abd, #2b62a3);
  color: white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  margin-right: 16px;
  border: 2px solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
}

.user-detail {
  flex: 1;
  padding: 2px 0;
}

.username {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 6px;
  letter-spacing: 0.3px;
}

.user-id {
  font-size: 14px;
  opacity: 0.9;
}

.copy-id {
  padding: 10px;
  margin-left: 4px;
}

.copy-icon {
  width: 22px;
  height: 22px;
  opacity: 0.9;
}

/* 积分和会员卡片区域 */
.card-container {
  display: flex;
  padding: 16px;
  gap: 16px;
  margin-top: -8px;
}

.points-card, .vip-card {
  flex: 1;
  background: white;
  border-radius: 16px;
  padding: 18px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.points-card:active, .vip-card:active {
  transform: scale(0.98);
}

.card-icon image {
  width: 36px;
  height: 36px;
  margin-right: 12px;
}

.card-value {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 6px;
  color: #333;
}

.card-label {
  font-size: 13px;
  color: #666;
  letter-spacing: 0.2px;
}

/* 浏览历史区域 */
.history-section {
  margin: 16px;
  background: white;
  border-radius: 16px;
  padding: 18px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.more {
  font-size: 14px;
  color: #666;
  padding: 4px 8px;
  border-radius: 4px;
  background: #f5f5f5;
}

.history-content {
  display: flex;
  overflow-x: auto;
  gap: 16px;
  padding: 4px 0;
  scrollbar-width: none;
  -webkit-overflow-scrolling: touch;
}

.history-content::-webkit-scrollbar {
  display: none;
}

.history-item {
  flex-shrink: 0;
  width: 130px;
}

.history-cover {
  width: 130px;
  height: 174px;
  border-radius: 12px;
  margin-bottom: 10px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.history-title {
  font-size: 14px;
  margin-bottom: 4px;
  font-weight: 500;
  color: #333;
}

.history-desc {
  font-size: 12px;
  color: #666;
  line-height: 1.4;
}

/* 分销商和更多功能区域 */
.distributor-section, .more-section {
  margin: 16px;
  background: white;
  border-radius: 16px;
  padding: 18px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 18px;
  color: #333;
}

.distributor-grid, .more-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px 16px;
  padding: 4px 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.grid-item:active {
  opacity: 0.8;
}

.grid-item image {
  width: 36px;
  height: 36px;
  margin-bottom: 2px;
}

.grid-item text {
  font-size: 13px;
  color: #333;
  text-align: center;
}